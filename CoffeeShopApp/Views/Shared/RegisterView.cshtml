@model CoffeeShopApp.Models.Registration
@{
    ViewData["Title"] = "RegisterView";
}

<h2>Registration</h2>

<h3>Please register below</h3>

<form asp-controller="Registration" asp-action="RegisterView" method="post">

    <div class="form-group">
        <div>
            <label asp-for="UserName">New User Name:</label>
            <input asp-for="UserName" class="form-control" />
        </div>
        <span asp-validation-for="UserName" class="text-danger"></span>

        <div>
            <label asp-for="email">Email:</label>
            <input asp-for="email" class="form-control" />
        </div>
        <span asp-validation-for="email" class="text-danger"></span>

        <div>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>

        <div>
            <label asp-for="Password2">Please retype your Password:</label>
            <input asp-for="Password2" class="form-control" />
        </div>
        <span asp-validation-for="Password2" class="text-danger"></span>


        @Html.ActionLink("Submit", "FinishRegister", new { @class = "btn btn-default btn-large" })

    </div>
    
</form>

